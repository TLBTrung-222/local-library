extends layout 

block content 
    h1 ID: #{bookInstance._id}
    p
        strong Title: 
        a(href=`/catalog/book/${bookInstance.associatedBook._id}`)  #{bookInstance.associatedBook.title}
        p 
            strong Imprint: 
            | #{bookInstance.imprint}
        p 
            strong Status: 
            | #{bookInstance.status}
        if ["Maintenance", "Loaned"].includes(bookInstance.status)
            p 
                strong Due-back: 
                | #{bookInstance.due_back}
    hr
    p
        a(href=`/catalog/bookinstance/${bookInstance._id}/delete`) Delete BookInstance
    p
        a(href=`/catalog/bookinstance/${bookInstance._id}/update`) Update BookInstance