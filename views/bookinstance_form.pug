extends layout 

block content 
    //- need to pass: title, books, possibleStatus, bookInstance
    h1= title 
    form(action="", method="post") 
        div.form-group
            label(for="book") Book: 
            select#book.form-control(name="book") 
                option(value='') --Please select a book-- 
                each book in books 
                    //- if newBookInstance exist, user already filled in value
                    if bookInstance && bookInstance.book 
                        if bookInstance.book.toString()===book._id.toString()
                            option(value=book._id selected) #{book.title}
                        else 
                            option(value=book._id) #{book.title}
                    else 
                        option(value=book._id) #{book.title}

        div.form-group
            label(for="imprint") Imprint: 
            input#imprint.form-control(type="text", name="imprint" placeholder='Publisher and date information', value=(bookInstance===undefined? '': bookInstance.imprint))

        div.form-group
            label(for="due_back") Date when book available:
            input#due_back.form-control(type="date", name="due_back" value=(bookInstance===undefined? '': bookInstance.due_back_yyyy_mm_dd))
        
        div.form-group
            label(for="status") Status:
            select#status.form-control(name="status")
                option(value="") --Please select a status-- 
                each status in possibleStatus 
                    if bookInstance && bookInstance.status 
                        if bookInstance.status.toString()===status.toString()
                            option(value=status selected) #{status}
                        else 
                            option(value=status) #{status}
                    else   
                        option(value=status) #{status}
        
        button.btn.btn-primary(type="submit") Submit

    if errors 
        ul 
        each error in errors 
            li=error.msg 