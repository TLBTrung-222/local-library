extends layout 

block content 
    h1 Author #{author.name}
    p #{author.lifespan} 

    h3 Books 
    if books
        ul 
            each book in books 
                a(href=book.url) #{book.title}
                p #{book.summary}
        hr
    else 
        p No book with this genre
    
    p #[a(href=`${author.url}/delete`) Delete author] 
        
    p #[a(href=`${author.url}/update`) Update author]
        